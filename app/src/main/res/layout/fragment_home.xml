<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_root"
    style="@style/ScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    >

    <!-- Dashboard / Resumo de alertas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_alert_summary"
        style="@style/DataCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/card_alertas_id"
            android:layout_margin="0dp"
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_alerts_title"
                android:layout_width="wrap_content"
                android:textColor="@color/primary_green_dark"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Alertas"

                />

            <TextView
                android:id="@+id/tv_alerts_count"
                style="@style/DataCardValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Ativos" />

            <TextView
                android:id="@+id/tv_alerts_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Último: Alta de pH na Caixa 2 — 2h atrás"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Atalhos (Estufas / Caixas D'água) -->
    <LinearLayout
        android:id="@+id/shortcuts_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_alert_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_shortcut_greenhouses"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:id="@+id/card_estufas_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_green"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Estufas"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 cadastradas"
                    android:textColor="@color/white"
                    android:textSize="12sp"

                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_shortcut_water_tanks"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:id="@+id/card_caixas_dagua_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp"
                android:background="@color/tertiary_water_blue"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caixas D'água"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 cadastradas"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Botão Grande para Nova Leitura -->

    <!-- Espaço reservado / rodapé -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_new_reading"
        style="@style/ButtonPrimary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:text="Nova Leitura"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shortcuts_container" />

    <TextView
        android:id="@+id/tv_home_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Última sincronização: 10/12/2025 09:24"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>