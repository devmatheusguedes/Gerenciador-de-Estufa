<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_alerts_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground">

    <!-- AppBar com Toolbar e TabLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_alerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_alerts"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Alertas"
            android:titleTextColor="@color/white"
            android:background="@color/secondary_teal"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/primary_green"
            app:tabSelectedTextColor="@color/primary_green"
            app:tabTextColor="@color/text_secondary"
            app:tabMode="fixed">

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tab_active"-->
<!--                android:text="Ativos" />-->

<!--            <com.google.android.material.tabs.TabItem-->
<!--                android:id="@+id/tab_history"-->
<!--                android:text="Histórico" />-->
        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Conteúdo: ViewPager2 para alternar entre lista de alertas Ativos e Histórico -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_alerts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <!-- FAB para ação rápida: Marcar seleção como resolvida (visível na aba 'Ativos') -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_mark_resolved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Marcar como resolvido"
        app:tint="@color/white"
        app:backgroundTint="@color/primary_green"
        app:layout_anchor="@id/viewpager_alerts"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="16dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>