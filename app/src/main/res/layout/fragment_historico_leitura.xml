<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_reading_history_root"
    style="@style/WaterSectionBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".ui.reading.ReadingHistoryFragment">

    <!-- Filtro por caixa d'água -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/primary_green">

        <TextView
            android:id="@+id/tv_filter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caixa:"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_water_tanks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />

    </LinearLayout>

    <!-- Lista cronológica de leituras -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reading_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical"/>

</LinearLayout>