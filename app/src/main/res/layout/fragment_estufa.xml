<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_greenhouses_root"
    style="@style/ScreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".ui.greenhouses.GreenhousesFragment">

    <!-- App Bar / Toolbar com título visível -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_greenhouses"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Estufas"
            app:titleTextColor="@color/white"
            app:titleCentered="true"
            android:titleTextColor="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIconTint="@color/white"
            android:background="@color/secondary_teal" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Container de conteúdo: pesquisa + lista -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_greenhouse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de pesquisa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_greenhouse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:queryHint="Pesquisar estufa..."
                android:iconifiedByDefault="false"
                android:contentDescription="Pesquisar estufas"
                android:background="@color/primary_green_dark"/>
        </androidx.cardview.widget.CardView>

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- RecyclerView que ocupa o resto do espaço do container -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_greenhouses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"
            android:contentDescription="Lista de estufas cadastradas"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>

    <!-- Botão fixo na parte inferior para cadastrar nova estufa -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_greenhouse"
        style="@style/ButtonPrimary"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Adicionar Estufas"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>