<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- ========================= -->
        <!-- FUNDO DA JANELA -->
        <!-- ========================= -->
        <style name="ScreenBackground">
            <item name="android:backgroundTint">@color/black</item>
        </style>

        <style name="WaterSectionBackground">
            <item name="android:background">@color/tertiary_water_blue</item>
        </style>

        <!-- ========================= -->
        <!-- BOTÕES -->
        <!-- ========================= -->
        <style name="ButtonBase">
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/white</item>
        </style>

        <!-- Botão Confirmar / Salvar -->
        <style name="ButtonPrimary" parent="ButtonBase">
            <item name="android:backgroundTint">@color/primary_green</item>
        </style>

        <!-- Botão Alerta / Emergência -->
        <style name="ButtonAlert" parent="ButtonBase">
            <item name="android:backgroundTint">@color/accent_orange</item>
        </style>

        <!-- ========================= -->
        <!-- CARDS DE DADOS -->
        <!-- ========================= -->
        <style name="DataCard">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@color/white</item>
            <item name="android:padding">16dp</item>
            <item name="android:elevation">4dp</item>
        </style>

        <style name="DataCardTitle">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">@color/text_secondary</item>
        </style>

        <style name="DataCardValue">
            <item name="android:textSize">22sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/primary_green</item>
        </style>

        <!-- ========================= -->
        <!-- TOOLBAR -->
        <!-- ========================= -->
        <style name="AppToolbar">
            <item name="android:background">@color/secondary_teal</item>
            <item name="android:titleTextColor">@color/white</item>
        </style>


</resources>